#extend <vio>
#extend <text>
#prog_name "end_script"
#new $sug
#start
    text.init:($sug)
    &out:("Do you want to end the script?")
    &get_in:($sug)
    @if_equals:$sug,"y"
        &out:("Okay!")
        &exit
    @close

    @if_notequals:$sug,"y"
        &out:("I don't care about what you typed. I close it anyway! Ha-ha-ha!")
        &exit
    @close
